# =============================================================================
# KALSHI-POLYMARKET ARBITRAGE SYSTEM CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control!

# =============================================================================
# KALSHI CONFIGURATION
# =============================================================================
# Get API key from https://kalshi.com/settings/api
KALSHI_API_KEY=your_kalshi_api_key_here

# RSA private key for signing requests
# Option 1: Path to PEM file
KALSHI_PRIVATE_KEY_PATH=/path/to/kalshi_private_key.pem

# Option 2: Inline PEM content (escape newlines with \n)
# KALSHI_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nMIIE...\n-----END RSA PRIVATE KEY-----

# =============================================================================
# POLYMARKET CONFIGURATION
# =============================================================================
# Polygon wallet private key (for signing transactions)
# WARNING: This key controls your funds - keep it secure!
POLYMARKET_PRIVATE_KEY=0x_your_polygon_wallet_private_key

# Optional: Polymarket API credentials (if using authenticated endpoints)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# Polygon RPC URL (default: public RPC, recommend using Alchemy/Infura for production)
POLYGON_RPC_URL=https://polygon-rpc.com
# POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Minimum profit percentage to trigger execution (default: 2.5%)
MIN_PROFIT_PCT=2.5

# Maximum position size per trade in USD (default: 1000)
MAX_POSITION_SIZE=1000

# Enable live trading (set to false for paper trading / monitoring only)
LIVE_TRADING_ENABLED=false

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================
# Webhook URL for alerts (Discord or Slack compatible)
ALERT_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK

# Telegram bot configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Minimum alert level: debug, info, warning, error, critical
MIN_ALERT_LEVEL=info

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Data directory for persistence
DATA_DIR=market_data

# Full scan interval in seconds (default: 60)
FULL_SCAN_INTERVAL=60

# =============================================================================
# OFFSHORE/PRODUCTION DEPLOYMENT
# =============================================================================
# If deploying outside US, you may need VPN/proxy configuration
# HTTP_PROXY=
# HTTPS_PROXY=

# Server timezone
TZ=UTC
